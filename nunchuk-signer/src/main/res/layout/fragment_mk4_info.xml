<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/NCToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:navigationIcon="@drawable/ic_back">

        <com.nunchuk.android.widget.NCFontTextView
            android:id="@+id/toolbarTitle"
            style="@style/NCToolbar.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/nc_before_you_start" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/signerTypeIcon"
        android:layout_width="96dp"
        android:layout_height="97dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/nc_padding_24"
        android:background="@drawable/nc_circle_white_background"
        android:padding="@dimen/nc_padding_22"
        android:src="@drawable/ic_air_signer_big" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/tv_desc"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_16"
        android:text="@string/nc_ensure_to_following_step" />

    <com.nunchuk.android.widget.NCLabelWithNumber
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_24"
        app:bold="true"
        app:pos="1"
        app:text="@string/nc_init_coldcard" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/tv_desc_one"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_8"
        android:paddingStart="@dimen/nc_padding_36"
        android:paddingEnd="0dp"
        android:text="@string/nc_refer_to" />

    <com.nunchuk.android.widget.NCLabelWithNumber
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_24"
        app:bold="true"
        app:pos="2"
        app:text="@string/nc_unlock_coldcard" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/tv_desc_two"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_8"
        android:paddingStart="@dimen/nc_padding_36"
        android:paddingEnd="0dp"
        android:text="@string/nc_unlock_device_desc" />

    <com.nunchuk.android.widget.NCLabelWithNumber
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_24"
        app:bold="true"
        app:pos="3"
        app:text="@string/nc_enable_nfc" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/tv_desc_three"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/nc_padding_16"
        android:layout_marginTop="@dimen/nc_padding_8"
        android:paddingStart="@dimen/nc_padding_36"
        android:paddingEnd="0dp"
        android:text="@string/nc_enable_mk4_nfc_desc" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.nunchuk.android.widget.NCFontButton
        android:id="@+id/btn_continue"
        style="@style/NCPrimaryButton.Dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nc_padding_16"
        android:text="@string/nc_text_continue" />
</LinearLayout>