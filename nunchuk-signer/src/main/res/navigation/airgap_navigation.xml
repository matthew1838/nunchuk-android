<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/airgap_navigation"
    app:startDestination="@id/airgapIntroFragment">

    <fragment
        android:id="@+id/airgapIntroFragment"
        android:name="com.nunchuk.android.signer.components.add.AirgapIntroFragment"
        android:label="AirgapIntroFragment">
        <action
            android:id="@+id/action_airgapIntroFragment_to_addAirgapSignerFragment"
            app:destination="@id/addAirgapSignerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/addAirgapSignerFragment"
        tools:layout="@layout/fragment_add_signer"
        android:name="com.nunchuk.android.signer.components.add.AddAirgapSignerFragment"
        android:label="AddAirgapSignerFragment" />

</navigation>