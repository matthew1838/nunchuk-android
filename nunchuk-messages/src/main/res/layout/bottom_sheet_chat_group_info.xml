<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nc_bottom_sheet_background"
    android:orientation="vertical"
    android:padding="@dimen/nc_padding_16"
    android:paddingBottom="300dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp">

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btnEdit"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_edit"
        android:drawablePadding="@dimen/nc_padding_8"
        android:paddingHorizontal="@dimen/nc_padding_14"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_message_edit_group_name" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btnAddMembers"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_add_members"
        android:drawablePadding="@dimen/nc_padding_8"
        android:padding="@dimen/nc_padding_16"
        android:text="@string/nc_message_add_members" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btnDelete"
        style="@style/NCText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_clear"
        android:drawablePadding="@dimen/nc_padding_8"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/nc_padding_14"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_message_leave_group"
        android:textColor="@color/nc_red_color" />

</LinearLayout>