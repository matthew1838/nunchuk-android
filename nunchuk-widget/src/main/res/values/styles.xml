<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NunchukTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/nc_primary_color</item>
        <item name="colorPrimaryDark">@color/nc_primary_dark_color</item>
        <item name="colorAccent">@color/nc_accent_color</item>
    </style>

    <style name="NCToolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="NCToolbar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nc_black_color</item>
        <item name="android:textSize">@dimen/nc_text_size_18</item>
        <item name="fontTextStyle">bold</item>
    </style>

    <style name="NunchukNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="NunchukNoActionBar.Light" parent="NunchukNoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/nc_accent_color</item>
        <item name="android:windowBackground">@color/nc_white_color</item>
    </style>

    <style name="NunchukNoActionBar.Dark" parent="NunchukNoActionBar">
        <item name="colorPrimary">@color/nc_primary_color</item>
        <item name="colorPrimaryDark">@color/nc_primary_dark_color</item>
        <item name="colorAccent">@color/nc_accent_color</item>
        <item name="android:windowBackground">@color/nc_white_color</item>
    </style>

    <style name="NCTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/nc_primary_dark_color</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/nc_white_color</item>
        <item name="tabSelectedTextColor">@color/nc_primary_dark_color</item>
        <item name="tabTextColor">@color/nc_primary_dark_color</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="tabTextAppearance">@style/NCTextAppearance</item>
    </style>

    <style name="NCTabLayout.Dark" parent="NCTabLayout">
        <item name="tabIndicatorColor">@color/nc_white_color</item>
        <item name="tabBackground">@color/nc_primary_color</item>
        <item name="tabSelectedTextColor">@color/nc_white_color</item>
        <item name="tabTextColor">@color/nc_white_color</item>
    </style>

    <style name="NCTabLayout.Light" parent="NCTabLayout">
        <item name="tabIndicatorColor">@color/nc_primary_color</item>
        <item name="tabBackground">@color/nc_white_color</item>
        <item name="tabSelectedTextColor">@color/nc_primary_color</item>
        <item name="tabTextColor">@color/nc_primary_color</item>
    </style>

    <style name="NCTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NCBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/NCBottomSheetStyle</item>
    </style>

    <style name="NCBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/nc_bottom_sheet_background</item>
    </style>

    <style name="NCAnimatedDialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>